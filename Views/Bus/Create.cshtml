@model CompanyMvc.Models.Bus

<h1>Create Bus</h1>
<div class="container">
    <form asp-controller="Bus" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="BusNo">Bus No</label>
        <input type="text" class="form-control" asp-for="BusNo">
    </div>
    <div class="mb-3">
        <label asp-for="Type">Select Bus Type</label>
        <select class="form-select" asp-for="Type" asp-items="@Html.GetEnumSelectList<BusType>()">Bus Type</select>
    </div>
    <div class="mb-3">
        <label asp-for="Capacity">Bus Capacity</label>
        <input type="number" class="form-control" asp-for="Capacity">
    </div>
    <div class="mb-3">
        <label asp-for="SeatsAvailable">Seats Available</label>
        <input type="number" class="form-control" asp-for="SeatsAvailable">
    </div>
    <div class="mb-3">
        <label asp-for="DateAvailable">Depature Date</label>
        <input type="date" class="form-control" asp-for="DateAvailable">
    </div>
    <div class="mb-3">
        <label asp-for="DepartureTime">Travel Time</label>
        <input type="text" class="form-control" asp-for="DepartureTime">
    </div>
    <button class="btn btn-primary" type="submit">Submit Form</button>
</form>
</div>
