@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Admin Page";
}
<!-- sidebar element declaration -->
<ejs-sidebar id="default-sidebar" closeOnDocumentClick="false">
	<e-content-template>
		<div class="title-header">
			<div style="display:inline-block">Menu</div>
		</div>
    <ul class="nav sidebar-nav flex-column">
                <li class="mb-3 mt-6">
                    <a href="#" class="btn btn-outline-primary" style="color: white;">
                        <i class="fa-duotone fa-users"></i>
                        <span class="e-text">Manage Users</span>
                    </a>
                </li>
                <li class="mb-3">
                    <a href="@Url.Action("CreateRole", "Admin")" class="btn btn-outline-primary" style="color: white;">
                       <i class="fa-solid fa-key"></i>
                        <span class="e-text">Manage Roles</span>
                    </a>
                </li>
                <li class="mb-3">
                    <a href="@Url.Action("Index", "Bus")" class="btn btn-outline-primary" style="color: white;">
                        <i class="fa-solid fa-bus"></i>
                        <span class="e-text">Manage Bus</span>
                    </a>
                </li>
                <li class="mb-3">
                    <a href="@Url.Action("ListRoutes", "Admin")" class="btn btn-outline-primary" style="color: white;">
                        <i class="fa-solid fa-route"></i>
                        <span class="e-text">Manage Routes</span>
                    </a>
                </li>
            </ul>
	</e-content-template>
</ejs-sidebar>
<!-- end of sidebar element -->

<div class="container">
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800 text-center">DashBoard</h1>
  </div>
  <div class="row">
    <!--   Users -->
    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                Users</div>
              <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count()</div>
            </div>
            <div class="col-auto">
              <i class="fa-solid fa-user fa-2xl"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--  End Users -->
    <!--    Roles  -->
    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                Roles</div>
              <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count()</div>
            </div>
            <div class="col-auto">
              <i class="fa-solid fa-key fa-2xl"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--   End Roles -->
    <!--     Buses -->
    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                Buses</div>
              <div class="h5 mb-0 font-weight-bold text-gray-800">3</div>
            </div>
            <div class="col-auto">
              <i class="fa-solid fa-bus fa-2xl"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--     End Buses -->
  </div>
  <h1 class="h3 mb-0 mt-3 text-gray-800 text-center">Registered Users</h1>
  <div class="mt-4">
    <ejs-grid id="grid" dataSource="@Model">
      <e-grid-columns>
        <e-grid-column field="UserName" headerText="Username"></e-grid-column>
        <e-grid-column field="FirstName" headerText="First Name"></e-grid-column>
        <e-grid-column field="LastName" headerText="Last Name"></e-grid-column>
        <e-grid-column field="NationalId" headerText="National ID"></e-grid-column>
        <e-grid-column field="Email" headerText="Email"></e-grid-column>
      </e-grid-columns>
    </ejs-grid>
  </div>
</div>